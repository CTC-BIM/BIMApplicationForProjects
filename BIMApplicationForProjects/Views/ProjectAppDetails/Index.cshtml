@model IEnumerable<BIMApplicationForProjects.Models.C03_ProjectAppDetails>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách dự án <small class="text-danger">Projects list</small></h2>

<p class="btn btn-warning" style="margin:10px">
    @Html.ActionLink("Thêm ứng dụng | Add new Application", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateRequest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserRequest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isAccept)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OtherRequest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BIMerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeadLine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resource)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C01_Projects.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C02_AppLists.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C06_Status.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C07_Result.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C08_RequestType.TypeName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @string.Format("{0:dd/MMM/yyyy}", item.DateRequest)
                @*@Html.DisplayFor(modelItem => item.DateRequest)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRequest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isAccept)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OtherRequest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BIMerName)
            </td>
            <td>
                @string.Format("{0:dd/MMM/yyyy}", item.DeadLine)
                @*@Html.DisplayFor(modelItem => item.DeadLine)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resource)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C01_Projects.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C02_AppLists.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C06_Status.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C07_Result.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C08_RequestType.TypeName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>

