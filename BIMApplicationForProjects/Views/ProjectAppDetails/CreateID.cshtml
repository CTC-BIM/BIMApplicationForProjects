@model BIMApplicationForProjects.Models.C03_ProjectAppDetails

@{
    ViewBag.Title = "Thêm Ứng dụng cho dự án";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string ProjectID = ViewBag.ProjectID;
    string ProjectName = ViewBag.ProjectName;
    //string ThongBao = Session["ThongBao"].ToString();
    BIMApplicationForProjects.Models.ApplicationUser userLogin = Session["LoginUser"] as BIMApplicationForProjects.Models.ApplicationUser;
    DateTime requestDate = (DateTime)ViewBag.DateRequest;
    DateTime reqDate = (DateTime)Session["DateCreate"];
}

<h2>Thêm ứng dụng BIM cho dự án <small class="text-danger">Add new BIM applications</small></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Vui lòng điền chọn ứng dụng từ Danh sách <small class="text-info">Please select BIM Application from Menulist</small>:</h4>

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.UserRequest, "Người yêu cầu", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox(userLogin.UserName, userLogin.UserName, new { @class = "form-control", @readonly = "readonly" })
            @*@Html.EditorFor(model => model.UserRequest, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên người yêu cầu" } })*@
            @Html.ValidationMessageFor(model => model.UserRequest, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProjectID, "Dự án", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input class="form-control" type="text" value="@ProjectName" disabled="disabled">
            @*@Html.DropDownList("ProjectID", null, htmlAttributes: new { @class = "form-control", @name="cmbProjectID", @value = ProjectName  })
                @Html.ValidationMessageFor(model => model.ProjectID, "", new { @class = "text-danger" })*@
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AppID, "Chọn ứng dụng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("AppID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AppID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RequestID, "Sản phẩm yêu cầu", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("RequestID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RequestID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateRequest, "Ngày yêu cầu", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateRequest, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.DateRequest } })
            @Html.ValidationMessageFor(model => model.DateRequest, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DeadLine, "Ngày hoàn thành", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.DeadLine, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DeadLine, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.OtherRequest, "Yêu cầu khác", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.OtherRequest, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập nội dung các yêu cầu khác, càng cụ thể càng tốt" } })
            @Html.ValidationMessageFor(model => model.OtherRequest, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Resource, "Tài liệu tham khảo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Resource, new { htmlAttributes = new { @class = "form-control", placeholder = "Hyperlink chứa tài liệu liên quan đến yêu cầu" } })
            @Html.ValidationMessageFor(model => model.Resource, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group col-md-offset-2 col-md-10">
        <i class="text-danger">@Session["ThongBao"].ToString()</i>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-primary col-lg-1" />
        </div>

    </div>

    @* new *@

    <div class="form-group form-inline" style="margin:5px">
        @*<div class="btn btn-warning col-sm-2">
                @Html.ActionLink("<< Back to List", "Index", "Projects")
            </div>*@
        @*<div class="col-sm-2">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>*@
    </div>
    <hr />


</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
