@model IEnumerable<BIMApplicationForProjects.Models.C02b_AppWorkDetails>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh mục chi tiết các công việc thực hiện theo từng Ứng dụng BIM <small>Work detail list for BIM applications</small></h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.C02_AppLists.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkName)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.C02_AppLists.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkName)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new {id=item.ID }) |
            @Html.ActionLink("Details", "Details", new {id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new {id = item.ID })
        </td>
    </tr>
}

</table>
