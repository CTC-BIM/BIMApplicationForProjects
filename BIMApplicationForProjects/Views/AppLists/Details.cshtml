@model BIMApplicationForProjects.Models.C02_AppLists

@{
    ViewBag.Title = "BIM Application Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Results = ViewBag.AppResult as List<BIMApplicationForProjects.Models.C02a_AppResults>;
    var AppList = ViewBag.AppList as List<BIMApplicationForProjects.Models.C02_AppLists>;
}

<style>
    /* Make the image fully responsive */
    .carousel-inner img {
        width: 100%;
        max-height: 700px;
        border: solid;
        border-color: white;
    }
</style>

<div class="form-group form-inline">
    <div class="form-group col-lg-10">
        <h2 class="text-left"><b>@Model.Name</b></h2>
        <h2 class="text-left text-danger"><i>@Model.Name_EN</i></h2>
    </div>
    <div class="col-lg-2 form-group">

    </div>
    <br />
</div>

<br />
<div class="form-group container-fluid form-inline col-lg-12">
    <div class="form-group col-lg-2 navbar-left bg-primary" style="background-color:black">
        <h4>Ứng dụng</h4>
        <i style="color:yellow">Application list</i>
        <hr />
        <ul class="list-group">
            @foreach (var item in AppList)
            {
                <li class="list-group-item text-primary">@Html.ActionLink(item.Name, "Details", "AppLists", new { id = item.ID }, new { @class = "text-primary" }) </li>
            }
        </ul>
        <div class="form-group">
            @Html.ActionLink("<< Back", "UserIndex", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    <div class="form-group col-lg-10 navbar-right bg-primary" style="background-color:black">
        <h4>Mục đích | <i style="color:yellow">Application for</i></h4>
        <h4>@Model.Description </h4>
        <i style="color:yellow">@Model.Description_EN</i>
        <hr />
        <div>
            <h4>Kết quả đạt được <i class="text-primary">App results</i></h4>
            <ol>
                @foreach (var item in Results)
                {
                    <li><h5 class="text-primary"><b>@item.Result</b></h5></li>
                }
            </ol>
        </div>
        <hr />

        @* Carousel *@
        <div id="AppSlide" class="carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#img0" data-slide-to="0" class="active"></li>
                <li data-target="#img1" data-slide-to="1"></li>
                <li data-target="#img2" data-slide-to="2"></li>
                <li data-target="#img3" data-slide-to="3"></li>
                <li data-target="#img4" data-slide-to="4"></li>
            </ul>

            <!-- The slideshow -->
            <div class="carousel-inner">
                <div class="item active" id="img0">
                    <img src="~/Assets/AppImages/@Model.MainImage" alt="img0">
                </div>
                <div class="item" id="img1">
                    <img src="~/Assets/AppImages/@Model.SubImage1" alt="img1">
                </div>
                <div class="item">
                    <img src="~/Assets/AppImages/@Model.SubImage2" alt="New York">
                </div>
                <div class="item">
                    <img src="~/Assets/AppImages/@Model.SubImage3" alt="New York">
                </div>
                <div class="item">
                    <img src="~/Assets/AppImages/@Model.SubImage4" alt="New York">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#AppSlide" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#AppSlide" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>


        @* End Carousel *@
        <hr />


    </div>
</div>



